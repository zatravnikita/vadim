<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="users" author="zn">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="fio" type="varchar(255)"/>
            <column name="number" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="login" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="authority" type="varchar(255)"/>
            <column name="enabled" type="boolean"/>
        </createTable>
        <loadData file="db/changelog/v1/files/users.csv"
                  schemaName="public"
                  tableName="users">
        </loadData>
    </changeSet>

    <changeSet id="books" author="zn">
        <createTable tableName="books">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="author" type="varchar(255)"/>
            <column name="work" type="varchar(255)"/>
        </createTable>
        <loadData file="db/changelog/v1/files/books.csv"
                  schemaName="public"
                  tableName="books">
        </loadData>
    </changeSet>

    <changeSet id="books_instance" author="zn">
        <createTable tableName="books_instance">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_books" references="books(id)"/>
            </column>
            <column name="number" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <loadData file="db/changelog/v1/files/books_instance.csv"
                  schemaName="public"
                  tableName="books_instance">
        </loadData>
    </changeSet>

    <changeSet id="reservation" author="zn">
        <createTable tableName="reservation">
            <column name="id" type="int" autoIncrement="true"/>
            <column name="books_instance_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_books_inst" references="books_instance(id)"/>
            </column>
            <column name="users_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_users" references="users(id)"/>
            </column>
            <column name="get_date" type="date"/>
            <column name="promise_date" type="date"/>
            <column name="return_date" type="date"/>
        </createTable>
        <loadData file="db/changelog/v1/files/reservation.csv"
                  schemaName="public"
                  tableName="reservation">
        </loadData>
    </changeSet>

</databaseChangeLog>
