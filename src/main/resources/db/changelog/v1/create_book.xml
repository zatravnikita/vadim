<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_reservation" author="zn">
        <createTable tableName="reservation">
            <column name="id" type="int" autoIncrement="true"/>
            <column name="book_id" type="varchar(255)"/>
            <column name="reader_id" type="varchar(255)"/>
            <column name="get_book" type="varchar(255)"/>
            <column name="prom_book" type="varchar(255)"/>
            <column name="return_book" type="varchar(255)"/>
        </createTable>
        <loadData  file="db/changelog/v1/files/reservation.csv"
                  schemaName="public"
                  tableName="reservation">
        </loadData>
    </changeSet>
</databaseChangeLog>